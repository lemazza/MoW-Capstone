
<%- include('partials/head')%>

<body>
<div class="container">
<%- include('partials/header', {title: 'Edit User Info'})%>

<%
  let fnameVal = user.firstName || "";
  let lnameVal = user.lastName || "";
  let emailVal = user.email || "";
%>

  <main>
  <div class="row">
    <div class="col-sm">
      <form id="edit-user">
        <legend>Edit <strong><%=user.userName%></strong></legend>
        <div class="form-group">
          <label for="fname"> First Name: </label>
          <input id="fname" class="form-control" name="fname" type="text" value="<%=fnameVal%>">
        </div>

        <div class="form-group">
          <label for="lname">Last Name: </label>
          <input id="lname" class="form-control" name="lname" type="text" value="<%=lnameVal%>">
        </div>

        <div class="form-group">
          <label for="email"> email: </label>
          <input id="email" class="form-control" name="email" type="email" value="<%=emailVal%>">
          
        </div>
        <button class="btn" type="submit">Submit</button>
      </form>
    </div>
    <div class="col-sm">
        <h4>Delete User</h4>
        <p><span class="text-danger">WARNING: </span>This will permanently delete <span class="text-primary"><%=user.userName%></span> and all associated characters</p>
        <button type="button" class="btn btn-danger" id="user-delete">Delete</button>
    </div>
  </div>

  </main>
</div>

<script type="text/javascript" src="../common.js"></script>
<script type="text/javascript" src="../edit-user.js"></script>
</body>
</html>
